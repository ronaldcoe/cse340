<!-- The content heading -->
<% if (title) { %>
    <h1><%= title %></h1>
    <%- messages() %>
    <% if (errors) { %>
        <ul class="notice errors">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>

    <form method="post" action="/inv/update" id="updateForm">
        <p>All fields are required </p>
        <label>
            Classification Name
            <%- select %>
        </label>
        <label>
          Make
          <input type="text" name="inv_make" placeholder="Min of 3 characters" required pattern="[A-Za-z]+" minlength="3" value="<%= locals.inv_make %>">
        </label>
        <label>
          Model
          <input type="text" name="inv_model" placeholder="Min of 3 characters" required minlength="3" value="<%= locals.inv_model %>">
        </label>
        <label>
          Description
          <textarea name="inv_description" required cols="60" rows="10"><%= locals.inv_description %></textarea>
        </label>
        <label>
          Image Path
          <input type="text" name="inv_image" required  value="/images/vehicles/no-image.png">
        </label>
        <label>
          Thumbnail Path
          <input type="text" name="inv_thumbnail" required  value="/images/vehicles/no-image.png">
        </label>
        <label>
          Price
          <input type="text" placeholder="decimal or integer" required name="inv_price" pattern="[0-9]+(\.[0-9]+)?"  value="<%= locals.inv_price %>">
        </label>
        <label>
          Year
          <input type="text"  placeholder="4-digit year" required name="inv_year" inputmode="numeric" minlength="4" pattern="[0-9]*"  value="<%= locals.inv_year %>">
        </label>
        <label>
          Miles
          <input type="text" placeholder="digits only" required name="inv_miles" inputmode="numeric" pattern="[0-9]*"  value="<%= locals.inv_miles %>">
        </label>
        <label>
          Color
          <input type="text" required  name="inv_color" inputmode="numeric" pattern="[A-Za-z]+"  value="<%= locals.inv_color %>">
        </label>
        <button  type="submit" id="updateBtn" disabled>Edit Vehicle</button>
        <input type="hidden" name="inv_id"
          <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
    </form>
    <% } else {
      res.redirect('/')
    } %>
<input type="hidden"  name="inv_id"
<% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
<% } %>>

<script src="/js/inv-update.js"></script>