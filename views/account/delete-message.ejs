<% if (title) { %>
    <h1><%= title %></h1>
    <p>Are you sure you want to delete this message?</p>
    <p class="account_btn_container">
        <form action="/account/message/delete" method="post">
            <input type="hidden" name="message_id" value="">
            <input type="submit" value="Delete Message">
        </form>
    </p>
    <script>
        // Extract the messageId from the URL
        const messageId = window.location.pathname.split('/').pop();

        // Assign the messageId to the hidden input value
        document.querySelector('input[name="message_id"]').value = messageId;
    </script>
<% } else {
    res.redirect("/");
} %>
